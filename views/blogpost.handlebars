<div class="blogpost">
  <h2 id="currentBlogpost">{{blogpost.title}}</h2>
  <h3> {{blogpost.user.username}} on {{format_date blogpost.createdAt}}</h3>
  <p>{{blogpost.body}}</p>
</div>

{{#if (equals user_id blogpost.user.id)}}
  <a href="/blogpost/{{blogpost.id}}/edit">Edit</a>
  <a href="/blogpost/{{blogpost.id}}/delete">Delete</a>

  <script src-"/jsdeletepost.js"></script>
{{/if}}

