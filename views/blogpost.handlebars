{{#if blogpost.comments}}
<div>
    <h3>Comments</h3>
    {{#each blogpost.comments}}
        <div class="comment">
        <h4>{{user.username}} on {{format_date createdAt}}</h4>
        <p>{{comment}}</p>
        </div>
    {{/each}}
    {{/if}}
    </div>

    {{#if user}}
    <form action="/blogpost/{{blogpost.id}}/comment" method="POST">
        <h3>Leave a Comment</h3>
        <label for="comment">Comment</label>
        <input type="text" id="commment" name="user_id" value="{{user.id}}" required>
        <textarea name="comment" placeholder="Comment"></textarea>
        <button type="submit">Post</button>
    </form>
   
   <script src="/js/comment.js"></script>
    {{/if}}
